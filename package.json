{
  "name": "lagom-css",
  "version": "0.1.0-alpha.0",
  "description": "Functional, utility-first CSS",
  "main": "dist/lagom.min.css",
  "scripts": {
    "build": "postcss src/*.css > dist/lagom.min.css",
    "storybook": "start-storybook",
    "test": "loki test",
    "approve": "loki approve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shwilliam/lagom-css.git"
  },
  "keywords": [
    "lagom",
    "css",
    "utility"
  ],
  "author": "William L <w-lindvall@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shwilliam/lagom-css/issues"
  },
  "homepage": "https://github.com/shwilliam/lagom-css#readme",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@storybook/react": "^5.0.6",
    "autoprefixer": "^9.5.0",
    "babel-loader": "^8.0.5",
    "cssnano": "^4.1.10",
    "loki": "^0.15.0",
    "postcss-cli": "^6.1.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "loki": {
    "diffingEngine": "looks-same",
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.app",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false,
        "fitWindow": false
      },
      "chrome.iphone7": {
        "target": "chrome.app",
        "preset": "iPhone 7"
      }
    }
  }
}
